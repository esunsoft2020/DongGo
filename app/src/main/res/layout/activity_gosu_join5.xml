<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GosuJoin5Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gosu_join"
                android:layout_gravity="center"
                android:textColor="@color/text_normal"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clear"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:onClick="clickClear"/>
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="86"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/progress">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progress"
                android:text="@string/progress3"
                android:textColor="@color/brandColor"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_address1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="60dp"
                android:textColor="@color/text_normal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_address2"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_gray"/>

<!--    구글 OpenAPI      -->
            <fragment
                android:id="@+id/map"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:name="com.google.android.gms.maps.SupportMapFragment" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:text="@string/branch_service5"
                android:textStyle="bold"
                android:onClick="clickAddressChange"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/branch_service6"
                android:textColor="@color/text_normal"
                android:layout_marginLeft="16dp"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/dis1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_selector"
                    android:text="@string/distance1"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="clickDistance"/>
                <TextView
                    android:id="@+id/dis2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_selector"
                    android:text="@string/distance2"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="clickDistance"/>
                <TextView
                    android:id="@+id/dis3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_selector"
                    android:text="@string/distance3"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="clickDistance"/>
                <TextView
                    android:id="@+id/dis4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_selector"
                    android:text="@string/distance4"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="clickDistance"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/dis5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_selector"
                    android:text="@string/distance5"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="clickDistance"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/dis6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_selector"
                    android:text="@string/distance6"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="clickDistance" />
                <TextView
                    android:id="@+id/dis7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_selector"
                    android:text="@string/distance7"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginRight="32dp"
                    android:gravity="center"
                    android:onClick="clickDistance"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/distance4"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:visibility="invisible"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_light_gray"
                android:layout_marginTop="40dp"
                android:onClick="clickNext">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"/>
            </RelativeLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>