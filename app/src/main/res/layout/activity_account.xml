<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_text1"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/text_normal"/>
            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_text2"
                android:layout_gravity="right"
                android:textSize="12sp"
                android:clickable="true"
                android:onClick="clickLogout"/>

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher_background"/>

            <View
                android:id="@+id/v"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/iv_profile"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignBottom="@id/iv_profile"
                android:layout_toRightOf="@id/v"
                android:layout_marginLeft="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_camera"
                android:layout_marginTop="60dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:text="@string/account_text3"
                android:layout_below="@id/recycler"
                android:layout_marginTop="60dp"
                android:onClick="clickWithdraw"/>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>